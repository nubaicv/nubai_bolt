<!DOCTYPE html>
<html lang="{{ htmllang() }}">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="x-ua-compatible" content="ie=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>
            {% block title %}
                {%- if record|default and record.title -%}
                    {{- record.title ~ ' | ' -}}
                {%- endif -%}
                {{- config.get('general/sitename') -}}
                {%- if record|default == null and config.has('general/payoff') -%}
                    {{- ' | ' ~ config.get('general/payoff') -}}
                {%- endif -%}
            {% endblock title %}
        </title>
        <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
        <link rel="stylesheet" href="{{ asset('css/main.css') }}">
        <link rel="stylesheet" href="{{ asset('css/fontawesome-free-6.0.0-beta2-web/css/all.css') }}" />
    </head>
    <body>
        {{ include('partials/_header.twig') }}

        <main class="">
            {% block main %}
            {% endblock main %}
        </main>

        {% block aside %}
            {{ include('partials/_aside.twig') }}
        {% endblock aside %}

        {{ include('partials/_footer.twig') }}
        <script src="{{ asset('js/jquery-3.6.0.js') }}"></script>
        <script src="{{ asset('js/main.js') }}"></script>
    </body>
</html>
